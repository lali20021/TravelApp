<div class="header">
  <div class="container">
    <h1>BokenjiKan</h1>
  </div>
</div>

<div class="tag">
  <div class="container">
    <h2><%= @tag.title %></h2>

  <div class="cards row">
    <% @destinations.each do |d| %>
    <div class="card col-xs-4">
      <%= image_tag d.image %>
      <h2><%= d.name %></h2>
      <p><%= d.description %></p>
    </div>
    <% end %>

    </div>

  </div>
</div>
